{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "../shared/*"
      ]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./*.ts",
    "./**/*.ts",
    "../shared/*.ts",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}